# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ytscript_dev

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Stripe (for future use)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Service Configuration
# For development, you can use Ethereal Email (https://ethereal.email)
# For production, use services like SendGrid, AWS SES, Gmail SMTP, etc.
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-username
SMTP_PASS=your-ethereal-password
SMTP_FROM="YTScript" <noreply@ytscript.com>

# YouTube API (for future use)
YOUTUBE_API_KEY=

# OpenAI API (for future use)
OPENAI_API_KEY=